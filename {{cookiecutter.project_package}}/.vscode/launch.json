    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Plone",
            "type": "python",
            "request": "launch",
            "module": "Zope2.Startup.serve",
            "args": [
                "-v",
                "${workspaceFolder}/instance/etc/zope.ini"
            ],
            "justMyCode": false
        },
        {
            "name": "Python: Test Plone",
            "type": "python",
            "request": "launch",
            "module": "zope.testrunner",
            "args": [
                "--test-path=src",
            ],
            "justMyCode": false
        }

    ]
}